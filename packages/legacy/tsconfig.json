{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "inlineSourceMap": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noEmit": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
